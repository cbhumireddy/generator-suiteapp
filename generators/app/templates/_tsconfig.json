{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "amd",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "outDir": "dist",
    "rootDir" : "src",
    "paths": {
      "N": [
        "node_modules/@hitc/netsuite-types/N"
      ],
      "N/*": [
        "node_modules/@hitc/netsuite-types/N/*"
      ]
    },
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "build/*",
    "test/**/*"
  ],
  "include": [
    "src/**/**/*"
  ]
}
